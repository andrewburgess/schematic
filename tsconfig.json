{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noErrorTruncation": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "stripInternal": true,
        "target": "ES2020"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["**/__tests__", "src/playground"]
}
